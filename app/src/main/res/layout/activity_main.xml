<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation= "vertical"
    android:padding = "16dp"
    tools:context=".MainActivity">

<EditText
    android:id="@+id/edit_distance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint ="Distância" />

    <TextView
        android:id="@+id/text_quilometro"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text = "Total de Quilometros" />

    <EditText
        android:id="@+id/edit_preco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint ="Preço" />

    <TextView
        android:id="@+id/text_precolitro"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text = "Preço por litro" />

    <EditText
        android:id="@+id/edit_autonomia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint ="Autonomia" />

    <TextView
        android:id="@+id/text_km"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text = "Km por litro" />

    <TextView
        android:id="@+id/text_gasto"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:textAllCaps="true" android:textSize ="18dp"
        android:layout_height="wrap_content"
        android:text = "Seu gasto será de" />

    <TextView
        android:id="@+id/text_resultado"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:textAllCaps="true"
        android:layout_height="wrap_content"
        android:text = "R$ 0"
        android:textColor = "#040897"
        android:textSize = "35dp" />

    <Button
        android:id="@+id/button_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="18dp"
        android:text ="Calcular" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

</LinearLayout>